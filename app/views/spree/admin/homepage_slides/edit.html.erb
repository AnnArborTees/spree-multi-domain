<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= Spree.t(:editing_homepage_slide) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:back_to_homepage_slides_list), spree.admin_homepage_slides_path, :icon => 'icon-arrow-left' %>
  </li>
<% end %>

<div data-hook="admin_homepage_slide_edit_form_header">
  <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @homepage_slide } %>
</div>

<div data-hook="admin_homepage_slide_edit_form">
  <%= form_for [:admin, @homepage_slide], :html => {:multipart => true} do |f| %>
    <fieldset class="no-border-top">
      <%= render :partial => 'form', :locals => { :f => f } %>

      <div class="clear"></div>

      <div data-hook="admin_homepage_slide_edit_form_buttons">
        <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
      </div>
    </fieldset>
  <% end %>
</div>
