<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
    <%= Spree.t(:new_homepage_slide) %>
<% end %>

<%= render :partial => 'spree/admin/shared/store_sub_menu' %>

<% content_for :page_actions do %>
    <li>
      <%= button_link_to Spree.t(:back_to_homepage_slides_list), spree.admin_homepage_slides_path, :icon => 'icon-arrow-left' %>
    </li>
<% end %>

<div data-hook="admin_homepage_slide_new_form_header">
  <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @homepage_slide } %>
</div>

<div data-hook="admin_homepage_slide_new_form">
  <%= form_for [:admin, @homepage_slide], :html => {:multipart => true}  do |f| %>
      <fieldset class="no-border-top">
        <%= render :partial => 'form', :locals => { :f => f } %>

        <div class="clear"></div>

        <div data-hook="admin_homepage_slide_new_form_buttons">
          <%= render :partial => 'spree/admin/shared/new_resource_links' %>
        </div>
      </fieldset>
  <% end %>
</div>
